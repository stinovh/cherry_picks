<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for @company, url: profile_update_path, method: "patch" do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, label: "Company name",autofocus: true %>
          <%= f.input :street_name, autofocus: true %>
          <%= f.input :house_number, autofocus: true %>
          <%= f.input :city, autofocus: true %>
          <%= f.input :zipcode, autofocus: true %>
          <%= f.input :country, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Save changes" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
