<%= simple_form_for @search, url: show_search_path, method: "patch" do |f| %>
  <div class="col-xs-12">
  <%= f.input :price, collection: [["No minimum", 0],["< € 100", 100],["< € 250", 250],["< € 500", 500],["< € 1000", 1000]], prompt: "Select a amount", class: "form-control" %>
  <%= f.input :amount_funded, collection: [["No minimum", 0],["> 10.000 euro", 10000],["> 100.000 euro", 100000],["> 1.000.000 euro", 1000000]], prompt: "Select a amount", class: "form-control" %>
  </div>
  <div class="col-xs-12">
  <%= f.input :brand, class: "form-control", placeholder: "Product name" %>
  </div>
  <div class="col-xs-12">
  <%= f.input :category, prompt: "Select a category", collection: @categories, class: "form-control" %>
  </div>
  <div class="col-xs-12 text-center">
    <%= f.submit "Refine results", class: "btn btn-danger submit-search" %>
  </div>
<% end %>
