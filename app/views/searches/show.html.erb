<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-3 text-center">
      <%= render 'searches/edit' %>
    </div>
    <div class="col-xs-12 col-md-9">
      <% @results.each do |product| %>
        <div class="col-xs-12 col-sm-6 col-lg-4 product-box text-center image-div">
          <%= product.name %>
          <%= product.price %>
        </div>
      <% end %>
