<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for @product, url: products_new_path, method: "post" do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, autofocus: true %>
          <%= f.input :description, autofocus: true %>
          <%= f.input :category_id, collection: @categories, prompt: "Pick your product category", autofocus: true %>
          <%= f.input :price, autofocus: true %>
          <%= f.input :delivery_date, autofocus: true %>
          <%= f.input :amount_funded, autofocus: true %>
          <%= f.input :amount_backers, autofocus: true %>
          <%= f.input :campaign_platform, autofocus: true %>
          <%= f.hidden_field :company_id, value: current_company.id, autofocus: true %>
          <%= f.input :campaign_link, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Save changes" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
