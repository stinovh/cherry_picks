<div class="container">
  <div class="row">
      <div class="col-xs-12 col-md-offset-2 col-md-8">
        <table class="table table-hover table-striped table-responsive">
          <thead>
            <tr>
              <th>
                Name
              </th>
              <th>
                Price
              </th>
              <th>
                Delivery date
              </th>
              <th>
                Amount funded
              </th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |p| %>
              <tr>
                <td><%= p.name %></td>
                <td>$<%= p.price %></td>
                <td><%= p.delivery_date %></td>
                <td>$<%= p.amount_funded %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
