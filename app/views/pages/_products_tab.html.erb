<div role="tabpanel" class="tab-pane <%= 'active' if active %>" id="<%= id %>">

  <div id="carousel-example-generic-<%= id %>" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

      <div class="item text-center active">
     <div class="container">
          <div class="row">
              <div class="col-xs-12">
                  <div class="row">

                      <% products.each do |a| %>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                          <div class="productbox">

                            <div class="productimage">
                              <%= image_tag "https://ksr-ugc.imgix.net/projects/2072279/photo-original.jpg?v=1443010430&w=338&h=250&fit=crop&auto=format&q=92&s=391234ba9a7f3e7e5a16fbef617cff61", class: "img-responsive" %>
                            </div>

                            <div class="productboxpadding">
                              <div class="productinfo">
                                <H4 class="text-left" style="margin-bottom: -4px"> <b><%= a.name %></b></H4>
                                <H5 class="text-left" style="margin-bottom: 4px"> <%= a.description%> </H5>
                              </div>

                              <h5 class="text-left" style="margin-bottom: -4px"> Price:  <b><%= a.price%>€</b></h5>

                              <h5 class="text-left" style="margin-bottom: 30px" > Expected Delivery:  <b><%= a.delivery_date%>€</b></h5>

                              <H5 class="text-left" style="margin-bottom: 3px">Money raised: <b><%= a.amount_funded || "no data"%>€ </b></H5>
                                <div class="progress">
                                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (a.amount_funded|| 0) / (200000.0/100.0) %>%; min-width: 3em;">
                                    <% if (a.amount_funded || 0) >= 100000 %>
                                    <p>good</p>
                                     <% elsif (a.amount_funded || 0) <= 100000 %>
                                     <p>ok</p>
                                     <% end %>
                                  </div>
                                </div>


                              <H5 class="text-left" style="margin-bottom: 3px">N° of Backers: <b><%= a.amount_backers || 0 %></b></H5>
                                <div class="progress">
                                  <div class="progress-bar" role="progressbar" aria-valuenow="<%= a.amount_backers%>" aria-valuemin="0" aria-valuemax="1000" style="width: <%= (a.amount_backers || 0) / 10.0 %>%; min-width: 3em;">
                                  <%= a.amount_backers || 0 %>
                                </div>
                               </div>


                              <div class="row">
                                <div class="col-xs-4">
                                    <H5 class="text-left">from:</H5>
                                   </div>
                                   <div class="col-xs-8 logobox">
                                    <% if a.campaign_platform == "kickstarter" %>
                                    <img class="kickstarterlogo" src="http://i.imgur.com/cTFvpSd.png">
                                    <% elsif a.campaign_platform == "indiegogo" %>
                                    <img class="indiegogologo" src="http://i.imgur.com/yJgpeO8.png">
                                    <% elsif a.campaign_platform == "kisskissbankbank" %>
                                     <img class="indiegogologo" src="https://upload.wikimedia.org/wikipedia/fr/f/f4/KissKissBankBank-logo.png">
                                     <% else %>
                                    <p class="indiegogologo"><% a.campaign_platform %></p>
                                    <% end %>
                                </div>
                              </div>

                           </div>

                          </div>
                        </div>
                      <% end %>

                  </div>
              </div>
          </div>
      </div>
     </div>

